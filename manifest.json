{
  "manifest_version": 3,
  "name": "AI Detector MVP",
  "version": "0.1.0",
  "description": "Detect and highlight AI-generated text, images, and video in the current tab.",
  "permissions": ["activeTab", "storage", "scripting", "tabCapture"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_popup": "popup.html", "default_title": "AI Detector" },
  "background": { "service_worker": "background.js" },
  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
