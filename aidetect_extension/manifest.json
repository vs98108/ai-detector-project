{
  "manifest_version": 3,
  "name": "AI Detect Overlay",
  "version": "0.1.0",
  "permissions": ["desktopCapture", "scripting", "activeTab", "offscreen"],
  "host_permissions": ["*://*/*"],
  "background": { "service_worker": "bg.js" },
  "action": { "default_title": "Start Capture" },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["detector.js", "overlay.js"],
      "run_at": "document_idle"
    }
  ]
}
